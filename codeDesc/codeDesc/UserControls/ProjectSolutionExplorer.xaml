<UserControl x:Class="codeDesc.ProjectSolutionExplorer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:codeDesc"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <DockPanel  Height="Auto" VerticalAlignment="Stretch">
            <Label HorizontalAlignment="Left" VerticalContentAlignment="Top" Content="Project solution explorer" Margin="5,0,0,0"/>
            <Button MinWidth="15" Height="Auto" HorizontalAlignment="Right" Margin="0,5,5,0" Style="{StaticResource WindowButton}" Click="btn_close_ProjectSolution" Background="#FF303030">
                <Image Name="Close_icon" Source="../Icons/Close_btn.png" Style="{DynamicResource WindowIcon}" />
            </Button>
        </DockPanel>

    </Grid>
</UserControl>
