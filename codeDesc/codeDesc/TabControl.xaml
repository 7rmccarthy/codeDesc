<UserControl x:Class="codeDesc.TabControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:codeDesc"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <TabControl TabIndex="1" Grid.Column="1" SelectionChanged="TabControl_SelectionChanged" Margin="10" Background="#424242" Foreground="White" Name="tabDynamic" ItemsSource="{Binding}">
            <TabControl.Resources>

                <DataTemplate x:Key="TabHeader" DataType="TabItem">
                    <DockPanel>

                        <Button Name="btnDelete" DockPanel.Dock="Right" Content="X"  Click="btnDelete_Click" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType={x:Type TabItem}}, Path=Name}" Width="15" Height="15">

                        </Button>
                        <TextBlock Text="{Binding RelativeSource={RelativeSource AncestorType={x:Type TabItem}}, Path=Header}"/>
                    </DockPanel>
                </DataTemplate>
            </TabControl.Resources>
        </TabControl>
    </Grid>
</UserControl>
