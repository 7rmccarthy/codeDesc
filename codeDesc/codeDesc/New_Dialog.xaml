<Window x:Class="codeDesc.New_Dialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:codeDesc"
        mc:Ignorable="d"
        Title="New" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="200*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="50*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Stretch">
            <TextBlock VerticalAlignment="Center" Margin="10" Name="label_ProjectName" Text="Project Name"/>
            <TextBox Name="txt_Project_Name" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Width="203"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="2">
            <TextBlock VerticalAlignment="Center" Margin="10" Name="Save" Text="Save"/>
            <TextBox Name="txt_Save"/>
        </StackPanel>
        <Button Grid.Row="3" Click="btn_import" HorizontalAlignment="Right" Margin="0,5,79,5" Content="Import"/>
        <Button Grid.Row="3" Click="btn_finish" HorizontalAlignment="Right" Margin="5" Content="Finish"/>
    </Grid>
</Window>
